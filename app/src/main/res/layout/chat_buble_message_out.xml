<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/message_out_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message_out_date"
            android:text="DD mnd yyyy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/message_out"
            android:background="@xml/message_rounded_borders_layout"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="120dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/message_out_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Melding fra bruker."
            android:padding="10dp"
            />

    </RelativeLayout>
</LinearLayout>