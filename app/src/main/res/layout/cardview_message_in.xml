<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/message_in_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message_in_date"
            android:text="DD mnd yyyy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/message_in"
            android:background="@xml/message_rounded_borders_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="120dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/user_image"
            android:layout_below="@+id/message_in_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Melding fra annen bruker av appen."
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/user_image"
            android:layout_below="@+id/message_in_date"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/emmawatson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>