<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_dialog_item"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:id="@+id/relative_layout_dialog_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/dialogs_user_image"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/ic_baseline_accessibility_24px" />

            <TextView
                android:id="@+id/dialogs_user_name"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="User Name"
                android:textSize="30sp"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@+id/dialogs_user_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dialogs_last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Last message from user"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@+id/dialogs_user_image"
                android:layout_below="@+id/dialogs_user_name"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>